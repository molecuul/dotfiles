#/bin/bash
# bspwm config

primary="LVDS1"

bspc monitor "$primary" -d m1 m2 m3 m4 m5 m6 m7 m8 m9 m10

bspc config window_gap 0
bspc config border_width 0

bspc config -m "$primary" top_padding 15
bspc config presel_feedback_color "#222222"

bspc config active_border_color "#555555"
bspc config focused_border_color "#888888"
