" show line numbers
set number

" disable weird cursor switching
set guicursor=

" enable syntax highlighting
syntax on
colorscheme ice_cold_code

" don't show modes, already in the statusline
set noshowmode

" line number colors
highlight LineNr ctermfg=darkgrey

" standard-ish tab modes
set shiftwidth=4
set tabstop=4
set expandtab
