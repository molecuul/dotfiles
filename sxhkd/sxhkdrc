# +--------------+
# | applications |
# +--------------+

super + Return
	urxvtc

super + g
	steam

super + s
	spotify

super + c
	qutebrowser

super + a
	aseprite

super + y
	audacity

super + m
	mumble

super + t
	atom

# +---------------------+
# | music/audio control |
# +---------------------+

# mpd volume down
super + Insert
	mpc -h localhost volume -5

# mpd volume up
super + Prior
	mpc -h localhost volume +5

# mpd play
super + Home
	mpc -h localhost play

# mpd stop
super + shift + Home
	mpc -h localhost stop

# master volume down
super + Delete
	amixer sset 'Master' 5%-

# master volume up
super + Next
	amixer sset 'Master' 5%+

# master volume toggle
super + End
	amixer sset 'Master' toggle

# microphone volume toggle
super + shift + End
	amixer sset 'Rear Mic' toggle

# +---------------+
# | bspwm control |
# +---------------+

# navigate desktops
super + {1-9,0}
	bspc desktop -f m{1-9,10}

# navigate alt desktops
super + ctrl + {1-9,0}
	bspc desktop -f a{1-9,10}

# navigate nodes
super + {Left, Right, Up, Down}
	bspc node -f {west,east,north,south}

# split direction preselection
super + shift + {Left, Right, Up, Down}
	bspc node -p {west,east,north,south}

# cancel preselection
super + ctrl + Escape
	bspc node -p cancel

# close, kill nodes
super + shift + {c,k}
	bspc node -{c,k}

# move node to desktop
super + shift + {1-9,0}
	bspc node -d m{1-9,10}

# move node to alt desktop
super + shift + ctrl + {1-9,0}
	bspc node -d a{1-9,10}

# toggle floating nodes
super + shift + t
	bspc node -t "~floating"

# toggle sticky nodes
super + shift + s
	bspc node -g sticky

# toggle fullscreen nodes
super + shift + f
	bspc node -t "~fullscreen"

# focus node on click
~button1
	bspc pointer -g focus

# move, resize nodes
super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

# finish resize, move on release
super + @button{1-3}
	bspc pointer -u

# exit bspwm
super + shift + Escape
	bspc quit

# turn off compton
super + shift + g
	killall compton lemonbar bar.sh tail

# restore compton
super + shift + n
	[ "$(pgrep compton)" = "" ] && compton

# restore bar
super + shift + b
	[ "$(pgrep lemonbar)" = "" ] && $HOME/.bar

# +---------------+
# | misc. control |
# +---------------+

# reload sxhkd config
super + Escape
	pkill -USR1 sxhkd
